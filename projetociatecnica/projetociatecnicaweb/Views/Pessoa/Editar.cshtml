@model aplicacao.Servicos.ServicoDePessoa.FormularioPessoa
@{
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
    ViewBag.Titulo = "Editar Cliente";
    ViewBag.TextoDeBotaoDeSubmissao = "Salvar";
    ViewBag.Action = "Editar";
    ViewBag.Controller = "Pessoa";
    ViewBag.Cancelar = "Index";
